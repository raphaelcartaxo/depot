<p id="notice"><%= notice %></p>

<p>
  <b>Name:</b>
  <%= @order.name %>
</p>

<p>
  <b>Address:</b>
  <%= @order.address %>
</p>

<p>
  <b>Email:</b>
  <%= @order.email %>
</p>

<p>
  <b>Pay type id:</b>
  <%= @order.pay_type_id %>
</p>

<p>
  <b>Pay type:</b>
  <%if @order.pay_type_id %>
    <td><%= PayType.find([@order.pay_type_id]).map { |pt| pt.name } %></td>
  <% else %>
    <td></td>
  <% end %>
</p>

<%= link_to 'Edit', edit_order_path(@order) %> |
