<div id="grid">
<h1>Listing orders</h1>

<table>
  <tr class="line_title">
    <th>Name</th>
    <th>Address</th>
    <th>Email</th>
    <th>Pay type id</th>
    <th>Pay type</th>
    <th>Ship date</th>
    <th colspan="3">Actions</th>
  </tr>

<% @orders.each do |order| %>
  <tr class="<%= cycle('line_old', 'line_even') %>">
    <td><%= order.name %></td>
    <td><%= order.address %></td>
    <td><%= order.email %></td>
    <td><%= order.pay_type_id %></td>
    <td><%= order.pay_type.name %></td>
    <td><%= order.ship_date %></td>
    <td><%= button_to 'Show',
                      order,
                      :method => :get %></td>
    <td><%= button_to 'Edit',
                      edit_order_path(order),
                      :method => :get %></td>
    <td><%= button_to 'Destroy',
                      order,
                      :confirm => 'Are you sure?',
                      :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />
<p><%= will_paginate @orders %></p>

