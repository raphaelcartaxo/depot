<div id="grid">
<h1>Listing users</h1>
<% if notice %>
  <p id="notice"><%= notice %></p>
<% end %>

<table>
  <tr class="line_title">
    <th>Name</th>
    <th colspan="3">Actions</th>
  </tr>

<% @users.each do |user| %>
  <tr class="<%= cycle('line_old', 'line_even') %>">
    <td><%= user.name %></td>
    <td><%= button_to 'Show',
                      user,
                      :method => :get %></td>
    <td><%= button_to 'Edit',
                      edit_user_path(user),
                      :method => :get %></td>
    <td><%= button_to 'Destroy',
                      user,
                      :confirm => 'Are you sure?',
                      :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />
<p><%= will_paginate @users %></p>

<%= button_to 'New User',
              new_user_path,
              :method => :get %>

