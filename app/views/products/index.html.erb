<div id="product_list">
  <h1>Listing products</h1>

<table>
<% @products.each do |product| %>
  <tr class="<%= cycle('list_line_old', 'list_line_even') %>">
    <td>
      <%= image_tag(product.image_url, :class => 'list_image') %>
    </td>

    <td class="list_description">
      <dl>
      <dt><%= product.title %></dt>
      <dd><%= truncate(strip_tags(product.description),
              :length => 100) %></dd>
      </dl>
    </td>

    <td class="list_actions">
      <%= button_to 'Show',
                      product,
                      :method => :get %>
      <%= button_to 'Edit',
                      edit_product_path(product),
                      :method => :get %>
      <%= button_to 'Destroy',
                      product,
                      :confirm => 'Are you sure?',
                      :method => :delete %>
    </td>
  </tr>
<% end %>
</table>

<br />
<p><%= will_paginate @products %></p>

<%= button_to 'New Product',
              new_product_path,
              :method => :get %>

