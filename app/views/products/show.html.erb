<p id="notice"><%= notice %></p>

<p>
  <b>Title:</b>
  <%= @product.title %>
</p>

<p>
  <b>Description:</b>
  <%= @product.description %>
</p>

<p>
  <b>Image url:</b>
  <%= @product.image_url %>
</p>

<p>
  <b>Price:</b>
  <%= @product.price %>
</p>

<div id="button_back">
<%= button_to 'Back',
              products_path,
              :method => :get %>
</div>
<div id="button_edit">
<%= button_to 'Edit',
              edit_product_path(@product),
              :method => :get %>
</div>

